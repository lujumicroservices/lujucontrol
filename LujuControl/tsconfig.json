{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@auth/*": [
        "./src/@auth/*"
      ],
      "@i18n": [
        "./src/@i18n/index"
      ],
      "@i18n/*": [
        "./src/@i18n/*"
      ],
      "@fuse/*": [
        "./src/@fuse/*"
      ],
      "@history*": [
        "./src/@history"
      ],
      "@mock-utils/*": [
        "./src/@mock-utils/*"
      ],
      "@schema": [
        "./src/@schema"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": true,
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2020",
      "scripthost"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true, // Enable source maps generation
    "outDir": "./.next" // Where the compiled JS files will go (optional)
  },
  "exclude": [
    "src/app/(public)/documentation/material-ui-components/components/**/*",
    "src/app/(public)/documentation/material-ui-components/doc/**/*",
    "node_modules"
  ],
  "include": [
    "./.next/types/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/global.d.ts",
    "build/types/**/*.ts",
    "next-env.d.ts",
    "tailwind.config.ts",
    ".next/types/**/*.ts"
  ]
}
